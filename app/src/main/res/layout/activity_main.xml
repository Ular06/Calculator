<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        app:layout_constraintBottom_toTopOf="@id/conteiner"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/text_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="36dp"
            android:gravity="bottom|end"
            android:text="0"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="80sp" />

    </FrameLayout>



   <LinearLayout
       android:id="@+id/conteiner"
       app:layout_constraintBottom_toBottomOf="parent"
       android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


       <LinearLayout
    android:paddingVertical="6dp"
    android:paddingHorizontal="14dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<com.google.android.material.button.MaterialButton
    style="@style/Gray.Button"
    android:onClick="onNumberClick"
    android:id="@+id/ac_text"
    android:text="AC"/>

           <com.google.android.material.button.MaterialButton
               style="@style/Gray.Button"
               android:layout_marginHorizontal="18dp"
               android:text="+/-" />

           <com.google.android.material.button.MaterialButton
        style="@style/Gray.Button"
        android:text="%"
        android:layout_marginEnd="18dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/text_delenie"
        android:onClick="onNumberClick"
        style="@style/Orange.Button"
        android:text="/" />


</LinearLayout>

       <LinearLayout
           android:paddingVertical="6dp"
           android:paddingHorizontal="14dp"
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.google.android.material.button.MaterialButton
               android:onClick="onNumberClick"
               android:id="@+id/text_7"
               style="@style/Gray.Dark.Button"
               android:text="7"/>

           <com.google.android.material.button.MaterialButton
               android:onClick="onNumberClick"
               android:id="@+id/text_8"
               style="@style/Gray.Dark.Button"
               android:text="8"
               android:layout_marginHorizontal="18dp" />

           <com.google.android.material.button.MaterialButton
               android:onClick="onNumberClick"
               android:id="@+id/text_9"
               style="@style/Gray.Dark.Button"
               android:text="9"
               android:layout_marginEnd="18dp" />

           <com.google.android.material.button.MaterialButton
               android:id="@+id/text_umnojenie"
               android:onClick="onNumberClick"
               style="@style/Orange.Button"
               android:text="x" />


       </LinearLayout>

       <LinearLayout
           android:paddingVertical="6dp"
           android:paddingHorizontal="14dp"
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.google.android.material.button.MaterialButton
               android:id="@+id/text_4"
               android:onClick="onNumberClick"
               style="@style/Gray.Dark.Button"
               android:text="4"/>

           <com.google.android.material.button.MaterialButton
               android:id="@+id/text_5"
               android:onClick="onNumberClick"
               style="@style/Gray.Dark.Button"
               android:text="5"
               android:layout_marginHorizontal="18dp" />

           <com.google.android.material.button.MaterialButton
               android:onClick="onNumberClick"
               android:id="@+id/text_6"
               style="@style/Gray.Dark.Button"
               android:text="6"
               android:layout_marginEnd="18dp" />

           <com.google.android.material.button.MaterialButton
               android:onClick="onOperationClick"
               android:id="@+id/text_minus"
               style="@style/Orange.Button"
               android:text="-" />


       </LinearLayout>

       <LinearLayout
           android:paddingVertical="6dp"
           android:paddingHorizontal="14dp"
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.google.android.material.button.MaterialButton
               android:id="@+id/text_1"
               android:onClick="onNumberClick"
               style="@style/Gray.Dark.Button"
               android:text="1"/>

           <com.google.android.material.button.MaterialButton
               android:id="@+id/text_2"
               android:onClick="onNumberClick"
               style="@style/Gray.Dark.Button"
               android:text="2"
               android:layout_marginHorizontal="18dp" />

           <com.google.android.material.button.MaterialButton
               android:id="@+id/text_3"
               style="@style/Gray.Dark.Button"
               android:onClick="onNumberClick"
               android:text="3"
               android:layout_marginEnd="18dp" />

           <com.google.android.material.button.MaterialButton
               style="@style/Orange.Button"
               android:id="@+id/text_plus"
               android:onClick="onOperationClick"
               android:text="+" />


       </LinearLayout>

       <LinearLayout
           android:paddingVertical="6dp"
           android:paddingHorizontal="14dp"
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.google.android.material.button.MaterialButton
               android:id="@+id/text_001"
               android:onClick="onNumberClick"
               style="@style/Gray.Dark.Button"
               android:layout_width="178dp"
               android:paddingStart="32dp"
               android:textAlignment="textStart"
               android:text="0"/>

           <com.google.android.material.button.MaterialButton
               style="@style/Gray.Dark.Button"
               android:text="."
               android:layout_marginHorizontal="18dp" />


           <com.google.android.material.button.MaterialButton
               style="@style/Orange.Button"
               android:id="@+id/text_ravno"
               android:onClick="onOperationClick"
               android:text="=" />


       </LinearLayout>

   </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>